<div class="row">
    <div class="shirtsFilter">
        <div class="col-md-4">
            <div class="filters">
                <div>
                    <label for="searchShirts" class="control-label">@i18n.Resources.Search</label>
                    <input id="searchShirts"
                           class="form-control"
                           type="text"
                           placeholder="@i18n.Resources.Enter @i18n.Resources.Shirts @i18n.Resources.ID"
                           data-bind="value: search, events:{ keyup: keyup }" />
                </div>
                <div class="margin010">
                    <button type="button" data-bind="click: find" class="btn btn-default">@i18n.Resources.Find</button>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="filters">
                <div>
                    <label for="statusFilter" class="control-label">@i18n.Resources.FilterStatus</label>
                    <select id="statusFilter"
                            class="form-control"
                            name="status-filter-kits"
                            data-role="dropdownlist"
                            data-value-primitive="true"
                            data-text-field="text"
                            data-option-label="@i18n.Resources.SelectStatus"
                            data-value-field="value"
                            data-bind="value: statusFilter, source: statuses"></select>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success shirtsForm">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">@i18n.Resources.AddANew @i18n.Resources.Shirts</h3>
                <div class="btn-group pull-right" role="group">
                    <button type="button" class="btn btn-sm btn-warning" data-bind="click: reset">@i18n.Resources.Reset</button>
                    <button type="button" class="btn btn-sm btn-success" data-bind="click: submit">@i18n.Resources.Submit</button>
                </div>
            </div>
            <div class="panel-body">
                <div class="row margin010">
                    <div class="col-sm-2">
                        <select class="form-control"
                                required
                                name="shirts-size"
                                validationMessage="@i18n.Resources.Required"
                                data-role="dropdownlist"
                                data-value-primitive="true"
                                data-text-field="text"
                                data-option-label="@i18n.Resources.SelectSize"
                                data-value-field="value"
                                data-bind="value: model.size, source: sizes"></select>
                    </div>

                    <div class="col-sm-2">
                        <select class="form-control"
                                required
                                name="shirts-status"
                                validationMessage="@i18n.Resources.Required"
                                data-role="dropdownlist"
                                data-value-primitive="true"
                                data-text-field="text"
                                data-option-label="@i18n.Resources.SelectStatus"
                                data-value-field="value"
                                data-bind="value: model.status, source: statuses"></select>
                    </div>
                    <div class="col-sm-2">
                        <select class="form-control"
                                required
                                name="shirts-qastatus"
                                validationMessage="@i18n.Resources.Required"
                                data-role="dropdownlist"
                                data-value-primitive="true"
                                data-text-field="text"
                                data-option-label="@i18n.Resources.SelectQAStatus"
                                data-value-field="value"
                                data-bind="value: model.qaStatus, source: qaStatuses"></select>
                    </div>

                    <div class="col-sm-2">
                        <select class="form-control" 
                                name="shirts-shirtsotopi"
                                data-role="dropdownlist"
                                data-value-primitive="true"
                                data-text-field="name"
                                data-option-label="@i18n.Resources.Select @i18n.Resources.ShirtsOctopi"
                                data-value-field="id"
                                data-bind="value: model.shirtsOctopiID, source: shirtsOctopies"></select>
                    </div>
                </div>
                <div class="row margin010">
                    <div class="col-sm-3">
                        <input type="text"
                               required
                               name="shirts-location"
                               validationMessage="@i18n.Resources.Required"
                               placeholder="@i18n.Resources.PhysicalLocation"
                               class="form-control"
                               data-bind="value: model.location" />
                    </div>

                    <div class="col-sm-3">
                        <input type="text"
                               name="shirts-label"
                               placeholder="@i18n.Resources.Label"
                               class="form-control"
                               data-bind="value: model.label" />
                    </div>
                </div>
                <div class="row margin010">
                    <div class="col-sm-12">
                        <textarea name="shirts-notes"
                                  class="form-control"
                                  placeholder="@i18n.Resources.Notes"
                                  data-bind="value: model.notes"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div id="shirtsGrid">

        </div>
    </div>
</div>
