@using DAL
@model Heddoko.Models.BaseViewModel


<script type="text/javascript">
    var Enums = {};

    Enums.userStatus = {};
    Enums.userStatus.enum = {};
    Enums.userStatus.array = {};
    @foreach (DAL.Models.UserStatus type in (DAL.Models.UserStatus[])Enum.GetValues(typeof(DAL.Models.UserStatus)))
    {
        <text>

    Enums.userStatus.enum["@Enum.GetName(typeof(DAL.Models.UserStatus), type)"] = @((int)type);

    Enums.userStatus.array[@((int)type)] = {
        "value": @((int)type),
        "text": Chars.convert('@Enum.GetName(typeof(DAL.Models.UserStatus), type)')
    };
    </text>
    }

    Enums.userRoles = {};
    Enums.userRoles.enum = {};
    Enums.userRoles.array = {};
    @foreach (DAL.Models.UserRole type in (DAL.Models.UserRole[])Enum.GetValues(typeof(DAL.Models.UserRole)))
    {
        <text>

    Enums.userRoles.enum["@Enum.GetName(typeof(DAL.Models.UserRole), type)"] = @((int)type);

    Enums.userRoles.array[@((int)type)] = {
        "value": @((int)type),
        "text": Chars.convert('@Enum.GetName(typeof(DAL.Models.UserRole), type)')
    };
    </text>
    }
</script>