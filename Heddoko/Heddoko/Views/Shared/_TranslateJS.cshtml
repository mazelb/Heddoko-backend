@using DAL
@model Heddoko.Models.BaseViewModel


<script type="text/javascript">
    var Enums = {};

    Enums.userStatus = {};
    Enums.userStatus.enum = {};
    Enums.userStatus.array = {};
    @foreach (DAL.Models.UserStatusType type in (DAL.Models.UserStatusType[])Enum.GetValues(typeof(DAL.Models.UserStatusType)))
    {
        <text>

    Enums.userStatus.enum["@type.GetDisplayName()"] = @((int)type);

    Enums.userStatus.array[@((int)type)] = {
        "value": @((int)type),
        "text": "@type.GetDisplayName()"
    };
    </text>
    }

    Enums.userRoles = {};
    Enums.userRoles.enum = {};
    Enums.userRoles.array = {};
    @foreach (DAL.Models.UserRoleType type in (DAL.Models.UserRoleType[])Enum.GetValues(typeof(DAL.Models.UserRoleType)))
    {
        <text>

    Enums.userRoles.enum["@type.GetDisplayName()"] = @((int)type);

    Enums.userRoles.array[@((int)type)] = {
        "value": @((int)type),
        "text": "@type.GetDisplayName()"
    };
    </text>
    }
</script>