@model Heddoko.Models.BaseViewModel

@if (Model.IsAuth)
{
    <a href="@Url.Action("Index", "Default")">@i18n.Resources.Home</a>
    switch (Model.CurrentUser.Role)
    {
        case DAL.Models.UserRoleType.Admin:
            <a href="@Url.Action("Index", "Admin")">@i18n.Resources.Inventory</a>
            <a href="@Url.Action("Index", "License")">@i18n.Resources.LicenseTitle</a>
            break;
        case DAL.Models.UserRoleType.Analyst:
            break;
        case DAL.Models.UserRoleType.LicenseAdmin:
            <a href="@Url.Action("Index", "Organization")">@i18n.Resources.LicenseTitle</a>
            break;
        case DAL.Models.UserRoleType.User:
            break;
    }
    <a href="@Url.Action("Me", "Account")">@i18n.Resources.Profile</a>
    <a href="@Url.Action("Index", "Support")">@i18n.Resources.Support</a>
    <a href="@Url.Action("Signout", "Account")">@i18n.Resources.SignOut</a>
}
else
{
    <a href="@Url.Action("Signin", "Account")">
        @i18n.Resources.Login
    </a>
}
