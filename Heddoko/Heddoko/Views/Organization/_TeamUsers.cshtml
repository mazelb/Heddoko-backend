<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success usersTeamForm">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">@i18n.Resources.AddANew @i18n.Resources.User</h3>
                <div class="btn-group pull-right" role="group">
                    <button type="button" class="btn btn-sm btn-warning" data-bind="click: reset">@i18n.Resources.Reset</button>
                    <button type="button" class="btn btn-sm btn-success" data-bind="click: submit">@i18n.Resources.Submit</button>
                </div>
            </div>
            <div class="panel-body">
                <div class="row margin010">
                    <div class="col-sm-3">
                        <input type="email"
                               required
                               name="user-email"
                               validationMessage="@i18n.Resources.Required"
                               placeholder="@i18n.Resources.Email"
                               class="form-control"
                               data-bind="value: model.email" />
                    </div>
                    <div class="col-sm-3">
                        <input type="text"
                               required
                               name="user-username"
                               validationMessage="@i18n.Resources.Required"
                               placeholder="@i18n.Resources.Username"
                               class="form-control"
                               data-bind="value: model.username" />
                    </div>
                </div>
                <div class="row margin010">
                    <div class="col-sm-3">
                        <input type="text"
                               name="user-firstname"
                               placeholder="@i18n.Resources.Firstname"
                               class="form-control"
                               data-bind="value: model.firstname" />
                    </div>
                    <div class="col-sm-3">
                        <input type="text"
                               name="user-lastname"
                               placeholder="@i18n.Resources.Lastname"
                               class="form-control"
                               data-bind="value: model.lastname" />
                    </div>
                    <div class="col-md-3">
                        <select class="form-control"
                                id="userRole"
                                name="user-role"
                                data-role="dropdownlist"
                                data-value-primitive="true"
                                data-text-field="text"
                                data-option-label="@i18n.Resources.Select @i18n.Resources.Role"
                                data-value-field="value"
                                data-bind="value: model.role, source: roles"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="heddoko-panel-white">
    <div class="filters usersTeamFilter">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4">
                    <label for="usersSearch" class="control-label">@i18n.Resources.Search</label>
                    <input id="usersSearch"
                           class="form-control"
                           type="text"
                           placeholder="@i18n.Resources.EnterUser"
                           data-bind="value: search, events:{ keyup: keyup }" />
                </div>
                <div class="col-md-1">
                    <button type="button" data-bind="click: find" class="hdk-btn" style="margin-top:27px;">@i18n.Resources.Find</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="usersTeamGrid">

            </div>
        </div>
    </div>
</div>
