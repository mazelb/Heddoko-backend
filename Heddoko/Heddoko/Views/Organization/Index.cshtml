@model Heddoko.Models.OrganizationIndexViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="header clearfix">
        @Html.Partial("_Navigation", Model)
        <h3 class="text-muted">@Model.Organization.Name</h3>
    </div>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#users">@i18n.Resources.Users</a></li>
        <li><a data-toggle="tab" href="#licenses">@i18n.Resources.Licenses</a></li>
    </ul>
    @Html.Partial("_FlashMessages", Model.Flash)
    <div class="tab-content">
        <div id="users" class="tab-pane fade in active">
            @Html.Partial("_Users")
        </div>

        <div id="licenses" class="tab-pane fade">
            @Html.Partial("_Licenses")
        </div>
    </div>
</div>

