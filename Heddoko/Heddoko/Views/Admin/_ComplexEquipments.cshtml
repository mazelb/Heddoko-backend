<div class="row">
    <div class="col-md-4">
        <div class="filters ComplexEquipmentsFilter">
            <div>
                <label for="searchComplexEquipment" class="control-label">@i18n.Resources.Search</label>
                <input id="searchComplexEquipment"
                       class="form-control"
                       type="text"
                       placeholder="@i18n.Resources.EnterComplexEquipment"
                       data-bind="value: search, events:{ keyup: keyup }" />
            </div>
            <div class="margin010">
                <button type="button" data-bind="click: find" class="btn btn-default">@i18n.Resources.Find</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-success ComplexEquipmentsForm">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">@i18n.Resources.AddANew @i18n.Resources.ComplexEquipment</h3>
                <div class="btn-group pull-right" role="group">
                    <button type="button" class="btn btn-sm btn-warning" data-bind="click: reset">@i18n.Resources.Reset</button>
                    <button type="button" class="btn btn-sm btn-success" data-bind="click: submit">@i18n.Resources.Submit</button>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-2">
                        <select class="form-control"
                                required
                                data-role="dropdownlist"
                                data-value-primitive="true"
                                data-text-field="text"
                                data-option-label="@i18n.Resources.SelectStatus"
                                data-value-field="value"
                                data-bind="value: model.status, source: statuses"></select>
                    </div>
                </div>
                <div class="row margin010">
                    <div class="col-sm-3">
                        <input type="text"
                               placeholder="@i18n.Resources.SerialNo"
                               class="form-control"
                               required
                               data-bind="value: model.serialNo" />
                    </div>

                    <div class="col-sm-3">
                        <input type="text"
                               placeholder="@i18n.Resources.MacAddress"
                               class="form-control"
                               required
                               data-bind="value: model.macAddress" />
                    </div>

                    <div class="col-sm-6">
                        <input type="text"
                               placeholder="@i18n.Resources.PhysicalLocation"
                               class="form-control"
                               required
                               data-bind="value: model.physicalLocation" />
                    </div>
                </div>
                <div class="row margin010">
                    <div class="col-sm-12">
                        <textarea data-bind="value: model.notes" 
                                  class="form-control" 
                                  placeholder="@i18n.Resources.Notes">
                        </textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="gridComplexEquipments">

        </div>
    </div>
</div>