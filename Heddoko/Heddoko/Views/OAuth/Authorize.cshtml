﻿@using System.Security.Claims
@using System.Web
@using Microsoft.AspNet.Identity
@{
    var authentication = Context.GetOwinContext().Authentication;
    var ticket = authentication.AuthenticateAsync(DefaultAuthenticationTypes.ApplicationCookie).Result;
    var identity = ticket != null ? ticket.Identity : null;
}
<div class="main-body col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4">
    <form method="POST">
        <div class="form-group" style="margin:60px 0 25px 0;">
            <h2>
                @i18n.Resources.Authorization
            </h2>
        </div>
        <div class="form-group">
            @i18n.Resources.ApplicationDescription
        </div>
        <div class="form-group">
            <input type="submit"
                   class="btn btn-default"
                   name="submit.Grant"
                   value="@i18n.Resources.Grant">
        </div>
        <div class="form-group">
            <input type="submit"
                   class="btn btn-default"
                   name="submit.Login"
                   value="@i18n.Resources.Cancel">
        </div>
    </form>
</div>